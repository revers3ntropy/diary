{
    "compilerOptions": {
        "types": ["@types/node"],
        "noEmit": true,
        "allowJs": true
    },
    "extends": "./tsconfig.json",
    "include": [
        "*.js",
        "*.ts",
        "*.cjs",
        "./e2e/**/*.ts",
        "./src/**/*.ts",
        "./src/**/*.svelte",
        "./playwright.config.ts",
        "./rollup.config.ts",
        "./svelte.config.js",
        "**/*.ts",
        "**/*.js",
        "./server/*.js",
        "./src/service-worker.ts",
        "ambient.d.ts",
        "./.svelte-kit/ambient.d.ts",
        "./.svelte-kit/types/**/$types.d.ts",
    ],
    "exclude": [
        "./node_modules/**",
        "./.svelte-kit/[!ambient.d.ts]**"
    ]
}
